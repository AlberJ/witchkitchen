<p id="notice"><%= notice %></p>

<p>
  <strong>Usuario: </strong> <%= @recipe.user.name %>
</p>

<p>
  <strong>Ingredientes</strong>
    <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Quantidade</th>
        <th scope="col">Unitade</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe.ingredients.each do |i| %>
        <tr>
          <td><%= i.name %></td>
          <td><%= i.quantity %></td>
          <td><%= i.unit %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<p>
  <strong>Preparo</strong>
  <%= t(@recipe.preparation) %>
</p>

<div style="margin-right: 10px">
  <%= link_to t('Edit'), edit_recipe_path(@recipe), class:"btn btn-light" %>
</div>

<%= link_to t('Back'), recipes_path, class:"btn btn-light" %>
